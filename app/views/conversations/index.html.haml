%h1 Listing conversations

%table
  %thead
    %tr
      %th Date
      %th Participants
      %th Notes
      %th
      %th
      %th

  %tbody
    - @conversations.each do |conversation|
      %tr
        %td= conversation.date
        %td= conversation.contacts.map(&:name).join(", ")
        %td= conversation.notes
        %td= link_to 'Show', conversation
        %td= link_to 'Edit', edit_conversation_path(conversation)
        %td= link_to 'Destroy', conversation, method: :delete, data: { confirm: 'Are you sure?' }

%br/

= link_to 'New Conversation', new_conversation_path
