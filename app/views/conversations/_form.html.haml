= simple_form_for(@conversation) do |f|
  = f.input :date
  = f.input :notes
  %h3 Participants
  #participants
    = f.simple_fields_for :participants do |participant|
      = render 'participant_fields', :f => participant
    .links
      = link_to_add_association 'add participant', f, :participants
  = f.button :submit
